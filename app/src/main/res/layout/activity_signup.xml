<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryLight"
    android:layout_height="match_parent">


    <View
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etFullName"
        android:hint="Enter Full Name"
        android:textColor="@color/icons"
        android:drawablePadding="10dp"
        android:textColorHint="#cccccc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColor="@color/icons"
        android:textColorHint="#cccccc"
        android:id="@+id/etEmail"
        android:hint="Enter Your Email"
        android:drawablePadding="10dp"
        android:layout_below="@+id/etFullName"
        android:layout_alignLeft="@+id/etFullName"
        android:layout_alignStart="@+id/etFullName"
        android:layout_alignRight="@+id/etFullName"
        android:layout_alignEnd="@+id/etFullName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Enter Your Password"
        android:singleLine="true"
        android:textColor="@color/icons"
        android:textColorHint="#cccccc"
        android:drawablePadding="10dp"
        android:layout_below="@+id/etEmail"
        android:layout_alignLeft="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:layout_alignRight="@+id/etEmail"
        android:layout_alignEnd="@+id/etEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etMobile"
        android:hint="Enter Your Mobile"
        android:singleLine="true"
        android:textColor="@color/icons"
        android:textColorHint="#cccccc"
        android:drawablePadding="10dp"
        android:layout_below="@+id/etPassword"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignRight="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword" />

    <Button
        android:id="@+id/bRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etMobile"
        android:layout_alignLeft="@+id/etMobile"
        android:layout_alignRight="@+id/etMobile"
        android:layout_alignStart="@+id/etMobile"
        android:layout_below="@+id/etMobile"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:text="Register"
        android:textColor="@color/icons" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Account"
        android:textColor="@color/icons"
        android:textSize="40sp"
        android:id="@+id/txt_success_name"
        android:gravity="center_horizontal"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="After clicking the Register Button. You will be redirected to Login Screen"
        android:id="@+id/textView6"
        android:textColor="@color/icons"
        android:gravity="center_horizontal"
        android:layout_below="@+id/txt_success_name"
        android:layout_alignRight="@+id/etFullName"
        android:layout_alignEnd="@+id/etFullName"
        android:layout_alignLeft="@+id/etFullName"
        android:layout_alignStart="@+id/etFullName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="137dp"
        android:layout_height="44dp"
        android:layout_marginLeft="122dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="16dp"
        android:fontFamily="cursive"
        android:text="@string/iReport"
        android:textAlignment="center"
        android:textColor="@color/icons"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>