<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/side_nav_bar"
    android:layout_height="match_parent">


    <View
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/et_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="180dp"
        android:drawablePadding="10dp"
        android:hint="@string/hint_full_name"
        android:textColor="@color/icons"
        android:textColorHint="#cccccc" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_full_name"
        android:layout_alignLeft="@+id/et_full_name"
        android:layout_alignRight="@+id/et_full_name"
        android:layout_alignStart="@+id/et_full_name"
        android:layout_below="@+id/et_full_name"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/icons"
        android:textColorHint="#cccccc" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/icons"
        android:textColorHint="#cccccc"
        android:layout_below="@+id/et_email"
        android:layout_alignLeft="@+id/et_email"
        android:layout_alignStart="@+id/et_email"
        android:layout_alignRight="@+id/et_email"
        android:layout_alignEnd="@+id/et_email" />

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignRight="@+id/et_password"
        android:layout_alignStart="@+id/et_password"
        android:layout_below="@+id/et_password"
        android:drawablePadding="10dp"
        android:hint="@string/hint_mobile"
        android:maxLines="1"
        android:textColor="@color/icons"
        android:textColorHint="#cccccc" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_mobile"
        android:layout_alignLeft="@+id/et_mobile"
        android:layout_alignRight="@+id/et_mobile"
        android:layout_alignStart="@+id/et_mobile"
        android:layout_below="@+id/et_mobile"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:text="@string/text_register"
        android:textColor="@color/icons" />

    <TextView
        android:id="@+id/txt_success_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:gravity="center_horizontal"
        android:text="@string/text_create_account"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/icons"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_full_name"
        android:layout_alignLeft="@+id/et_full_name"
        android:layout_alignRight="@+id/et_full_name"
        android:layout_alignStart="@+id/et_full_name"
        android:layout_below="@+id/txt_success_name"
        android:gravity="center_horizontal"
        android:text="@string/text_register_info"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/icons" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="137dp"
        android:layout_height="46dp"
        android:layout_marginLeft="122dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="16dp"
        android:fontFamily="cursive"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="42sp"
        android:textStyle="bold" />
</RelativeLayout>