<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hachemmasghouni.ireport1.Report"
    tools:layout_editor_absoluteY="25dp"
    android:background="@color/colorPrimaryDark"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto hochladen:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Standort:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginTop="69dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="69dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="16dp" />
        android:layout_marginBottom="71dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="137dp"
        android:layout_height="44dp"
        android:layout_marginStart="87dp"
        android:layout_marginStart="75dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="cursive"
        android:text="I Report All"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:mockup="@style/Animation.AppCompat.Dialog"
        android:layout_marginEnd="88dp"
        android:layout_marginEnd="76dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/spinner3"
        android:layout_marginTop="17dp"

         Reports
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="87dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="88dp" />
        android:layout_marginLeft="75dp"
        android:layout_marginRight="76dp" />
        Reports

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Report"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="41dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/spinner3"
        android:layout_marginTop="69dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="68dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="41dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are you reporting?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="16dp" />
        android:layout_marginLeft="16dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginStart="13dp"
        android:textColor="#FFFFFF"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintLeft_toRightOf="@+id/textView13"
        android:layout_marginLeft="13dp" />
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="74dp"
        android:layout_height="42dp"
        android:layout_marginEnd="85dp"
        android:onClick="btn_camera"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="334dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="85dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/getLocation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:onClick="get"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="Get Location"
        android:textColor="#FFFFFF"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinner3" />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="button9"
        android:text="Send Report"
        android:layout_marginEnd="16dp"
        android:background="@color/icons"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="16dp" />
        android:layout_marginTop="111dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        android:layout_marginRight="134dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="button10"
        android:text="@string/Return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        android:textColor="#FFFFFF"
        android:background="@color/icons"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/getLocation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:text="@string/test"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
